@model IEnumerable<ScrumpingLMS.Models.KlassApplicationUser>

@{
    ViewBag.Title = "Index";
}

<p>
    @Html.ActionLink("Lägg till koppling lärare-kurs", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Klass.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Klass.Name)
        </td>
        <td>
            @Html.ActionLink("Ändra", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detaljer", "Details", new { id=item.Id }) |
            @Html.ActionLink("Radera", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
