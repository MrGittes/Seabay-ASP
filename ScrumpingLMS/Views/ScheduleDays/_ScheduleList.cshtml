@model IEnumerable<ScrumpingLMS.Models.ScheduleDayViewModel>

<div id="KlassList">
    @foreach (var item in Model)
    {
        <div class="row rader">
            <div class="col-md-2">
               @Html.DisplayFor(modelItem => item.DayNumber):
               @item.WorkingDate.ToShortDateString()
            </div>
            <div class="col-md-2">
                @item.Klassnamn
            </div>
            <div class="col-md-6">
                @{var text = item.Details;}
                @Html.Raw(@text) &nbsp;
            </div>
            <div class="col-md-2">

                 @if (User.IsInRole("lärare"))
                 {
                    @Html.ActionLink("Ändra", "Edit", new { id = item.Id }) 
                 }
                 |

                @Html.ActionLink("Detaljer", "Details", new { id = item.Id }) 

            </div>
        </div>
    }
</div>